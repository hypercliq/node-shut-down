{
  "name": "@hypercliq/shutdown-cleanup",
  "version": "4.0.1",
  "description": "Module to handle graceful shutdowns",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc -p tsconfig.declaration.json && node esbuild.config.js",
    "pretest": "npm run lint",
    "test": "tsd && jest",
    "posttest": "npm run format",
    "release": "standard-version",
    "format": "prettier --loglevel warn --write .",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "prepublishOnly": "npm run clean && npm run build && npm t",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypercliq/shutdown-cleanup.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "graceful",
    "shutdown",
    "app",
    "application",
    "stop",
    "exit",
    "cleanup",
    "handle",
    "handles",
    "db",
    "database",
    "server"
  ],
  "author": "Hypercliq",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypercliq/shutdown-cleanup/issues"
  },
  "homepage": "https://github.com/hypercliq/shutdown-cleanup#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.27.0",
    "commander": "^7.2.0",
    "esbuild": "^0.12.8",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "pinst": "^2.1.6",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "tsd": "^0.17.0",
    "typescript": "^4.3.2"
  },
  "files": [
    "lib"
  ],
  "tsd": {
    "directory": "tests"
  }
}
