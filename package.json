{
  "name": "@hypercliq/shutdown-cleanup",
  "version": "4.1.3",
  "description": "Module to handle graceful shutdowns",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "parcel build --no-source-maps",
    "pretest": "npm run lint",
    "test": "tsd && jest",
    "posttest": "npm run format",
    "release": "standard-version",
    "format": "prettier --loglevel warn --write .",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "prepublishOnly": "npm run clean && npm run build && npm t",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypercliq/shutdown-cleanup.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "graceful",
    "shutdown",
    "app",
    "application",
    "stop",
    "exit",
    "cleanup",
    "handle",
    "handles",
    "db",
    "database",
    "server"
  ],
  "author": "Hypercliq",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypercliq/shutdown-cleanup/issues"
  },
  "homepage": "https://github.com/hypercliq/shutdown-cleanup#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@parcel/packager-ts": "^2.4.0",
    "@parcel/transformer-typescript-types": "^2.4.0",
    "@types/node": "^12.20.47",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "commander": "^9.2.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "parcel": "^2.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "tsd": "^0.20.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "@types/node": ">=12"
  },
  "files": [
    "dist"
  ],
  "tsd": {
    "directory": "tests"
  },
  "targets": {
    "main": {
      "optimize": true
    },
    "module": {
      "optimize": true
    }
  }
}
